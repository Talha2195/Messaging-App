<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Profile - Messaging App</title>
    <link rel="stylesheet" href="/css/profilePage.css" />
  </head>
  <body>
    <div class="profile-container">
      <div class="profile-box">
        <div class="menu-button" id="menuButton">
          <div class="dot"></div>
          <div class="dot"></div>
          <div class="dot"></div>
        </div>

        <img src="https://via.placeholder.com/80" alt="Profile Picture" class="profile-image" />
        <div class="username"><%= user.username %></div>

        <ul class="contacts-list">
          <li>
            <div class="contact-name">Jane Smith</div>
            <div class="contact-status">Online</div>
          </li>
          <li>
            <div class="contact-name">Bob Johnson</div>
            <div class="contact-status">Offline</div>
          </li>
          <li>
            <div class="contact-name">Alice Brown</div>
            <div class="contact-status">Online</div>
          </li>
          <li>
            <div class="contact-name">Charlie Davis</div>
            <div class="contact-status">Away</div>
          </li>
        </ul>
      </div>
    </div>

    <div class="add-user-button" id="addUserButton">+</div>

    <div class="friend-requests-button" id="friendRequestsButton">
      <img src="/images/addPerson.svg" alt="Add Friend"/>
    </div>

    <form class="search-container" id="searchContainer">
      <input type="text" id="searchInput" name="friendReq" placeholder="Enter username" required />
      <button type="submit" id="addButton">Add</button>
    </form>

    <div class="dropdown-menu friend-requests-dropdown" id="friendRequestsDropdown">
      <ul>
        <li>No friend requests</li>
      </ul>
    </div>

    <div class="dropdown-menu logout-dropdown" id="dropdownMenu">
      <ul>
        <li><a href="#" id="logout">Logout</a></li>
      </ul>
    </div>

    <script src="/js/logUserOut.js"></script>
    <script src="/js/dropDownMenu.js"></script>
    <script src="/js/friendRequestMenu.js"></script>
    <script src="/js/searchBar.js"></script>
    <script src="/js/sendFriendRequest.js"></script>
  </body>
</html>
